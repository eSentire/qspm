{
    "driver": {
        "browser": "chrome",
        "remote_url": "",
        "wait_time": 10,
        "page_load_wait_time": 0,
        "options": [
            "headless",
            "disable-infobars",
            "--disable-gpu",
            "--disable-extensions",
            "--disable-dev-shm-usage",
            "--disable-setuid-sandbox",
            "--no-sandbox"
        ],
        "capabilities": {},
        "version": "latest",
        "experimental_options": null,
        "extension_paths": []
    },

    "logging":{
        "screenshots_on": true,
        "pylog_level": "info"
    },

    "viewport": {
        "maximize": true,
        "width": 1440,
        "height": 900,
        "orientation": "portrait"
    }
}
